{
	"manifest_version": 2,

	"name": "LinguaLeo Mate",
	"description": "Reinforces LinguaLeo language learning experience",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png"
	},

	"content_scripts": [
		{
			"matches": ["https://lingualeo.com/ru/training/*"],
			"js": ["jquery.js", "injection.js"]
		}
	],

	"permissions": [
		"https://ajax.googleapis.com/"
	]
}